{
  "$schema": "https://railway.app/railway.schema.json",
  "defaultEnvironment": "production",
  "environments": [
    {
      "name": "production",
      "variables": {
        "PIP_PREFER_BINARY": "1"
      }
    }
  ],
  "services": [
    {
      "name": "web",
      "source": ".",
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "gunicorn app:app --bind 0.0.0.0:$PORT"
      }
    },
    {
      "name": "worker",
      "source": ".",
      "build": {
        "builder": "NIXPACKS"
      },
      "deploy": {
        "startCommand": "python worker.py"
      }
    }
  ]
}
